<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.WelcomeScreen"
    android:background="@drawable/billy"
    android:orientation="vertical">


    <TextView
        android:id="@+id/welcomeS_logo_id"
        android:layout_width="wrap_content"
        android:layout_height="158dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="64dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/colorPrimaryLight"
        android:text="What Type of Performer are you?"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:layout_marginEnd="20dp"
            android:layoutMode="opticalBounds">
            <ImageView
                android:id="@+id/singer_ptype"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/singer"
                android:scaleType="centerCrop"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/gradient_bg"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_marginTop="100dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"

                    android:layout_marginEnd="0dp"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:text="SINGER"
                    android:textColor="@color/colorPrimaryLight"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layoutMode="opticalBounds"
            android:layout_width="120dp"
            android:layout_height="130dp">
            <ImageView
                android:id="@+id/dancer_ptype"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/dancer"
                android:scaleType="centerCrop"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/gradient_bg"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_marginTop="100dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DANCER"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:foregroundGravity="center"
                    android:textColor="@color/colorPrimaryLight"
                    android:gravity="center"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        >
        <androidx.cardview.widget.CardView
            android:layoutMode="opticalBounds"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:layout_marginEnd="20dp">
            <ImageView
                android:id="@+id/spoken_ptype"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/spoken"
                android:scaleType="centerCrop"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/gradient_bg"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_marginTop="95dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SPOKEN POETRY"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:foregroundGravity="center"
                    android:textColor="@color/colorPrimaryLight"
                    android:gravity="center"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layoutMode="opticalBounds"
            android:layout_width="120dp"
            android:layout_height="130dp">
            <ImageView
                android:id="@+id/magician_ptype"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/magician"
                android:scaleType="centerCrop"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/gradient_bg"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_marginTop="100dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MAGICIAN"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:foregroundGravity="center"
                    android:textColor="@color/colorPrimaryLight"
                    android:gravity="center"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <androidx.cardview.widget.CardView
            android:layoutMode="opticalBounds"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:layout_marginEnd="20dp">
            <ImageView
                android:id="@+id/dj_ptype"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/dj"
                android:scaleType="centerCrop"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/gradient_bg"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_marginTop="100dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DJ"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:foregroundGravity="center"
                    android:textColor="@color/colorPrimaryLight"
                    android:gravity="center"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
           android:layoutMode="opticalBounds"
            android:layout_width="120dp"
            android:layout_height="130dp">
            <ImageView

                android:id="@+id/musician_ptype"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/musician"
                android:scaleType="centerCrop"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/gradient_bg"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_marginTop="100dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MUSICIAN"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:foregroundGravity="center"
                    android:textColor="@color/colorPrimaryLight"
                    android:gravity="center"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>



</LinearLayout>