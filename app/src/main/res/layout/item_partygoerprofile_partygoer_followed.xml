<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="135dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:cardCornerRadius="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="23dp"
            >

            <ImageView
                android:id="@+id/partyGoerProfile_partyGoerfollowed_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/imgplaceholder" />

        </androidx.cardview.widget.CardView>



            <TextView
                android:id="@+id/partyGoerProfile_partyGoerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
         android:layout_gravity="center"
                android:text="Jason"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp" />




        <Button
            android:id="@+id/partyGoerProfile_performerBTNfollow"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/follow_round"
            android:textColor="@color/colorPrimary"
            android:text="follow"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:textSize="10sp"
            />
    </LinearLayout>

</RelativeLayout>