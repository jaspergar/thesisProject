        <TextView
            android:id="@+id/barfragment_suggestedTVsearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Top Rated Bars"
            android:visibility="gone"
            android:textSize="20sp"
            android:layout_margin="8dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/barfragment_searchrv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />



        <TextView
            android:id="@+id/tv_sug_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:text="SUGGESTED BARS"
            android:textColor="@color/grey"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/SuggestedBarRecyclerView_id"
            app:layout_constraintEnd_toEndOf="@+id/SuggestedBarRecyclerView_id"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <RelativeLayout
            app:layout_constraintTop_toBottomOf="@+id/tv_sug_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/SuggestedBarRecyclerView_id"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0"
                    android:layoutAnimation="@anim/layout_anim_falldown">


                </androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>



        <TextView
            android:id="@+id/tv_notsug_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:text="ALL BARS"
            android:textColor="@color/grey"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/SearchBarRecyclerView_id"
            app:layout_constraintEnd_toEndOf="@+id/SearchBarRecyclerView_id"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progressbar_suggestedBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_alignParentStart="true"
            android:indeterminate="true"
            android:indeterminateBehavior="cycle" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/SearchBarRecyclerView_id"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutAnimation="@anim/layout_anim_falldown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SuggestedBarRecyclerView_id"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.recyclerview.widget.RecyclerView>


