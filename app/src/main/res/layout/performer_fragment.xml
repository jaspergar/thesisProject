<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <TextView
        android:id="@+id/tv_performer_category_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:text="Performer Category"
        android:textColor="@color/grey"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/performer_category_solo_id"
        app:layout_constraintEnd_toEndOf="@+id/performer_category_solo_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutAnimation="@anim/layout_anim_falldown">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_performer_category_id"

        android:layout_marginTop="2dp">
    <RelativeLayout
        android:id="@+id/performer_category_solo_id"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layoutAnimation="@anim/layout_anim_falldown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:background="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/solo_category_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/solo" />
        <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
            android:layout_marginTop="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/solo_category_img"
        app:layout_constraintEnd_toEndOf="@+id/solo_category_img"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/solo_category_img"
        app:layout_constraintTop_toTopOf="@+id/solo_category_img"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/gradient_bg" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="SOLO"
            android:textColor="@color/colorPrimaryLight"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            />

    </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/performer_category_solo_id"

        android:layout_marginTop="2dp">
    <RelativeLayout
        android:id="@+id/performer_category_duo_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutAnimation="@anim/layout_anim_falldown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/duo_category_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/duo" />
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="100dp"
            app:layout_constraintBottom_toBottomOf="@+id/duo_category_img"
            app:layout_constraintEnd_toEndOf="@+id/duo_category_img"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/duo_category_img"
            app:layout_constraintTop_toTopOf="@+id/duo_category_img"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/gradient_bg" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="DUO"
            android:textColor="@color/colorPrimaryLight"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            />


    </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layoutAnimation="@anim/layout_anim_falldown"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/performer_category_duo_id"
        android:layout_marginTop="2dp">
    <RelativeLayout
        android:id="@+id/performer_category_group_id"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/colorPrimary"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/group_category_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/group" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="100dp"
            app:layout_constraintBottom_toBottomOf="@+id/group_category_img"
            app:layout_constraintEnd_toEndOf="@+id/group_category_img"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/group_category_img"
            app:layout_constraintTop_toTopOf="@+id/group_category_img"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/gradient_bg" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="GROUP"
            android:textColor="@color/colorPrimaryLight"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            />
    </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>

    </ScrollView>





</LinearLayout>