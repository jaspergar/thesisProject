<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:layout_marginBottom="4dp">


    <ImageView
        android:id="@+id/performerevent_bphoto_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/imgplaceholder" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/event_gradient" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView15"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="50dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="50dp"
            android:layout_margin="3dp"
            >
            <ImageView
                android:id="@+id/performerevent_photo_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/imgplaceholder" />
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/performerevent_pname_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Performername"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryLight"
        app:layout_constraintStart_toEndOf="@+id/cardView15"
        app:layout_constraintTop_toTopOf="@+id/cardView15" />

    <TextView
        android:id="@+id/performerevent_ptype_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="performer type"
        android:textSize="13sp"
        android:textColor="@color/colorPrimaryLight"
        app:layout_constraintStart_toStartOf="@+id/performerevent_pname_id"
        app:layout_constraintTop_toBottomOf="@+id/performerevent_pname_id" />

    <TextView
        android:id="@+id/performerevent_pcategory_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="13sp"
        android:textColor="@color/colorPrimaryLight"
        app:layout_constraintStart_toStartOf="@+id/performerevent_ptype_id"
        app:layout_constraintTop_toBottomOf="@+id/performerevent_ptype_id" />

    <androidx.cardview.widget.CardView
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="@color/twitterblue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView16">


        <TextView
            android:id="@+id/performerevent_barlocation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="club"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="15sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView16"
        android:layout_width="130dp"
        android:layout_height="140dp"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="#ff007f"
        app:cardCornerRadius="2dp"
        app:layout_constraintEnd_toEndOf="@+id/performerevent_bphoto_id"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/performerevent_name_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:text="Sched name"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/performerevent_date_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:text="Date"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/performerevent_startTime_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:text="8:00 PM"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:text="UNTIL"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/performerevent_endTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:text="8:00 PM"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="12sp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>